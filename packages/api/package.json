{
  "name": "api",
  "description": "IMA REST API",
  "version": "0.2.0",
  "private": "true",
  "scripts": {
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:migrate:deploy": "prisma migrate deploy --preview-feature",
    "tsc": "tsc --noEmit",
    "eslint": "eslint ./src --ext .js,.jsx,.ts,.tsx --fix",
    "test": "cross-env NODE_ENV=\"test\" DATABASE_URL=\"postgresql://postgres:password@localhost:5432/ima?schema=public\" concurrently --kill-others-on-fail \"npm:test:*\"",
    "test:db": "docker-compose up -d",
    "test:server": "wait-on tcp:5432 --interval 5000 && npx ts-node ./jest.cleanup.ts && npm run db:migrate:deploy && jest --detectOpenHandles --verbose",
    "test:lint": "wait-on tcp:5432 --interval 5000 && npm run eslint && npm run tsc"
  },
  "author": "Jakub Ga≈Çecki",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@swc-node/jest": "^1.1.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/faker": "^5.1.7",
    "@types/hapi__cookie": "^10.1.2",
    "@types/hapi__hapi": "^20.0.5",
    "@types/jest": "^26.0.20",
    "@types/ms": "^0.7.31",
    "@types/zxcvbn": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "faker": "^5.4.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "prisma": "^2.17.0",
    "wait-on": "^5.2.1"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/cookie": "^11.0.2",
    "@hapi/hapi": "^20.1.0",
    "@prisma/client": "^2.17.0",
    "bcrypt": "^5.0.1",
    "cuid": "^2.1.8",
    "dotenv": "^8.2.0",
    "joi": "^17.4.0",
    "ms": "^2.1.3",
    "zxcvbn": "^4.4.2"
  }
}
