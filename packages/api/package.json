{
  "name": "api",
  "description": "IMA REST API",
  "version": "0.1.0",
  "private": "true",
  "scripts": {
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "tsc": "tsc --noEmit",
    "eslint": "eslint ./src --ext .js,.jsx,.ts,.tsx --fix",
    "test": "cross-env NODE_ENV=\"test\" DATABASE_URL=\"postgresql://postgres:password@localhost:5432/ima?schema=public\" concurrently --kill-others-on-fail \"npm:test:*\"",
    "test:db": "docker-compose up -d",
    "test:server": "wait-on tcp:5432 --interval 5000 && jest --detectOpenHandles --verbose",
    "test:lint": "wait-on tcp:5432 --interval 5000 && npm run eslint && npm run tsc"
  },
  "author": "Jakub Ga≈Çecki",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@swc-node/jest": "^1.1.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/hapi__hapi": "^20.0.5",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "prisma": "^2.17.0",
    "wait-on": "^5.2.1"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.1.0",
    "@prisma/client": "^2.17.0",
    "dotenv": "^8.2.0"
  }
}
